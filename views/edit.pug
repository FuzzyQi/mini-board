doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat&family=Playfair+Display:wght@400;700&display=swap', rel='stylesheet')
    link(href="/images/favicon_io/favicon-16x16.png", rel="icon")
    link(rel='stylesheet', href='/css/styles.css')
    title New Post
  body
    header
      ul.main-nav
        li.main-nav__item
          a(href='/posts') Home
        li.main-nav__item
          a(href='/posts/new') New
        li.main-nav__item
          a(href='#') Login
        li.main-nav__item
          a(href='#') Logout
    .main-heading__container
      h1.main-heading Edit Post
    article.new-post
      form.new-post__form(method='POST', action=`/posts/${_id}?_method=PATCH`)
        label.author-label(for='author', name="author")
          | Author
          input(name="author", type='text', value=author.username disabled)
        textarea(placeholder='Tell the world something...', name='content') #{message}
        button.submit-button(type="submit") Submit
    footer
